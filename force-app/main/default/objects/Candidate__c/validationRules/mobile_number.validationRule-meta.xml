<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>mobile_number</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(OR(REGEX(  mobile__c , &quot;[+91]{3}-[0-9]{10}&quot;)))</errorConditionFormula>
    <errorMessage>Enter &#39;+91-&#39; 10digit mobile number</errorMessage>
</ValidationRule>
